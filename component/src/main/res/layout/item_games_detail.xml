<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_games"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_image_not_available" />

    <ImageButton
        android:id="@+id/img_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_games"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/material_8dp"
        android:layout_marginEnd="@dimen/material_24dp"
        android:background="@null"
        android:src="@drawable/ic_favorites_unselected" />

    <TextView
        android:id="@+id/tv_games_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_games"
        android:layout_marginStart="@dimen/material_16dp"
        android:layout_marginTop="@dimen/material_8dp"
        android:text="Name of Games"
        android:textColor="@color/black"
        android:textSize="20sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_games_released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_games_name"
        android:layout_marginStart="@dimen/material_16dp"
        android:layout_marginTop="@dimen/material_8dp"
        android:text="Release Date" />

    <TextView
        android:id="@+id/tv_metacritic_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_games_released"
        android:layout_marginStart="@dimen/material_16dp"
        android:layout_marginTop="@dimen/material_4dp"
        android:text="Metacritic Rate" />

    <TextView
        android:id="@+id/tv_games_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_metacritic_rate"
        android:layout_marginStart="@dimen/material_16dp"
        android:layout_marginTop="@dimen/material_8dp"
        android:text="Description" />

</RelativeLayout>